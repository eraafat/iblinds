<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="account_move_width_height_inherit">
        <field name="name">view.invoice.inherit.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_category_id"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="vat_invoice_number"/>
                <field name="reviewer_employee_id"/>
                <field name="collector_employee_id"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <group>
                    <group>

                        <field name="total_counts"/>
                        <field name="total_price_materials"/>
                        <field name="materials" widget="many2many_tags"/>
                    </group>
                    <group>

                        <field name="total_quantity"/>
                        <field name="total_taxed_price_materials"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page/field[@name='invoice_line_ids']/list/field[@name='name']" position="after">
                <field name="color_id"/>
                <field name="count"/>
                <field name="height"/>
                <field name="width"/>
            </xpath>
        </field>
    </record>

    <!--    <record id="view_account_payment_form" model="ir.ui.view">-->
