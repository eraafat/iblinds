<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_product_pricelist_view_inherit">
        <field name="name">product.pricelist.view_bank_statement_form.invoice</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group>

                    <group>
                        <field name="product_template" widget="many2many_tags"/>
                        <button name="get_all_products_template" string="Get All Products" type="object" class="btn btn-success"/>
                    </group>
                    <group>
                        <field name="price"/>
                        <button name="update_products_prices_template" string="Update Price" type="object" class="btn btn-success"/>
                    </group>
                </group>

            </xpath>
        </field>
    </record>

</odoo>