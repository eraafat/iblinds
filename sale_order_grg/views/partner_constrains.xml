<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>
        <record id="customer_source_tree_view" model="ir.ui.view">
            <field name="name">customer.source.view.tree</field>
            <field name="model">customer.source</field>
            <field name="arch" type="xml">
                <list string="Customer Source">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="customer_source_form_view" model="ir.ui.view">
            <field name="name">customer.source.view.form</field>
            <field name="model">customer.source</field>
            <field name="arch" type="xml">
                <form string="Source">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_source_action" model="ir.actions.act_window">
            <field name="name">Customer Source</field>
            <field name="res_model">customer.source</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="customer_source_configuration"
                  name="Source"
                  parent="sale.menu_sale_config"
                  sequence="100"
                  action="customer_source_action"
                  groups="base.group_user"/>

    </data>

</odoo>